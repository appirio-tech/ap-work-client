.message(ng-if="vm.showMessage")
  img.checkmark-green(src="manage/images/check-solid-green.svg")
  span Your project has been launched.  Your co-pilot will contact you within 1 business day.

.heading
  h1 Manage Projects

  button(ui-sref='submit-work.flow')
    span New Project

hr

ul
  li(ng-repeat= "project in vm.workRequests")
    div
      header
        h4 {{project.name}}

        span.type {{project.requestType}}

      .middle
        img(src="manage/images/missing-image.svg", class="missing")

      .bottom(ng-class="project.class")
        img.checkmark(ng-if="project.checkmark", src="manage/images/{{project.checkmark}}")
        img.avatar(ng-if="project.avatar", src="http://www.topcoder.com/i/m/cardiboy_big.jpg")

        span.status {{project.message}}

        br

        span.action

          a(ng-if="project.status == 'Incomplete'",
            ui-sref="submit-work.flow({ id: project.id })") Continue setup

          span(ng-if="project.status == 'Submitted'")
            a(href="#/timeline/{{project.id}}") Waiting for Project Approval

          a(ng-if="project.status == 'Assigned'",
            href="#/timeline/{{project.id}}") Meet your copilot

          a(ng-if="project.status == 'Estimate'",
            href="#/timeline/{{project.id}}") View your quote and begin
