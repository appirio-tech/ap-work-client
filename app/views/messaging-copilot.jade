layout-header.elevated(role="banner" work-id="{{ vm.workId }}" ng-if="vm.isClient")

layout-project-nav(work-id="{{ vm.workId }}" ng-if="vm.isClient")

button(ng-if="!vm.isClient" ng-click="vm.back()") back to project

main.messaging.layout-main.flex.column.stretch("role"="main" layout-main=true flush-height=true )
  h1 Messaging

  messaging.flex.column.flex-grow.middle(
    ng-if="vm.hasCoilot"
    work-id="{{ vm.workId }}"
    thread-id="{{ vm.threadId }}"
    subscriber-id="{{ vm.subscriberId }}"
  )

  main.no-copilot(ng-if="!vm.hasCoilot")
    p Your Co-Pilot has not yet been assigned.

    p Once your Co-Pilot joins the project, you will be able to exchange messages with them here.

  loader(ng-show="vm.working")

layout-footer
